                                        <div class="inner">2015-01-11由Face上传</div>
                                      </div>
                                    </a>
                                  </li>
                              <% end %>
                            </ul>
                          </div>
                        </td>
                        <td><%= User.find(f.user_id).name%></td>
                        <td class="hidden-480">
                          <%= f.color%>
                        </td>
                        <td class="hidden-480">
