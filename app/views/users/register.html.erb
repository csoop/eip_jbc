<% @nav = 'register' %>
<%= render 'shared/header'  %>

    <div class="mainbar">
      
    <%= render 'shared/content_header' %>



      <!-- Matter -->

      <div class="matter">
        <div class="container">

          <div class="row">

            <div class="col-md-12">

              <div class="widget wred">
                <div class="widget-head">
                  <i class="icon-lock"></i> 注册
                  <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a> 
                  </div>
                  <div class="clearfix"></div>
                </div>

                <div class="widget-content">
                  <div class="padd">
                    
                    <!-- 注册 form -->
                                 <%= form_for @user, html: {class: "form-horizontal"} do |f| %>
                                    <div class="form profile">
                                      <!-- 修改 注册 form -->
                                     
                                          <!-- Name -->
                                          <div class="form-group">
                                            <label class="control-label col-lg-3" for="name1">Name</label>
                                            <div class="col-lg-6">
                                              <%= f.text_field :name, class: "form-control" %>
                                            </div>
                                            <div class="col-lg-3">
                                            <% if @user.errors[:name].any? %>
                                              <label class="label label-warning"><%= @user.errors[:name][0] %></label>
                                            <% end %>
                                            </div>
                                          </div>   
                                          <!-- Email -->
                                          <div class="form-group">
                                            <label class="control-label col-lg-3" for="email1">Email</label>
                                            <div class="col-lg-6">
                                              <%= f.text_field :email, :class => "form-control" %>
                                            </div>
                                            <div class="col-lg-3">
                                            <% if @user.errors[:email].any? %>
                                              <label class="label label-warning"><%= @user.errors[:email][0] %></label>
                                            <% end %>
                                            </div>
                                          </div>
                                          <!-- Password -->
                                          <div class="form-group">
                                            <label class="control-label col-lg-3" for="password2">Password</label>
                                            <div class="col-lg-6">
                                              <%= f.password_field :password, :class => "form-control" %>
                                            </div>
                                            <div class="col-lg-3">
                                            <% if @user.errors[:password].any? %>
                                              <label class="label label-warning"><%= @user.errors[:password][0] %></label>
                                            <% end %>
                                            </div>
                                          </div>
                                          <!-- password_confirmation -->
                                          <div class="form-group">
                                            <label class="control-label col-lg-3" for="password2">Password</label>
                                            <div class="col-lg-6">
                                              <%= f.password_field :password_confirmation, :class => "form-control" %>
                                            </div>
                                            <div class="col-lg-3">
                                            <% if @user.errors[:password_confirmation].any? %>
                                              <label class="label label-warning"><%= @user.errors[:password_confirmation][0] %></label>
                                            <% end %>
                                            </div>
                                          </div>
                                          
                                          <!-- Buttons -->
                                          <div class="form-group">
                                             <!-- Buttons -->
                       <div class="col-lg-6 col-lg-offset-1">
                        <%= f.submit "注册", :class => "btn btn-danger" %>
                        <button type="reset" class="btn btn-success">重设</button>
                      </div>
                      <% end %>
                                          </div>
                                      </form>
                                    </div>

                  </div>
                </div>
              </div>  
              
            </div>

          </div>

        </div>
      </div>

    <!-- Matter ends -->

<%= render partial: "shared/footer" %>