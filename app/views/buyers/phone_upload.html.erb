<% @nav = 'phone_upload' %>
<%= render 'shared/header' %>
<!-- Main bar -->
<div class="mainbar">

<%= render 'shared/content_header' %>


<!-- Matter -->

<div class="matter">
<div class="container">
  <div class="row">
        <div class="col-xs-12">
          <!-- PAGE CONTENT BEGINS -->

          <div class="alert alert-info">
            <i class="icon-hand-right"></i>

            请上传4张图片，尽量包含全视角
          </div>
        </div>
        <div class="col-sm-9">
          <div id="dropzone">
            <%= form_for :buyer, html: {class: "dropzone"} do |f| %>
            <div class="fallback">
              <%= f.file_field :image %>
            </div>
          </div><!-- PAGE CONTENT ENDS -->
        </div>
          <!-- Chosen选择 --> 
                          <div>
                          <br />
          
                            <div class="col-sm-3">
                              <span class="bigger-110">面料</span>
                              <select class="width-80 chosen-select" id="form-field-select-3" data-placeholder="Choose a Country...">
                                <option value="">&nbsp;</option>
                                <option value="AZ">皮革</option>
                                <option value="AR">布艺</option>
                                <option value="CA">California</option>
                                <option value="CO">Colorado</option>
                                <option value="CT">Connecticut</option>
                                <option value="DE">Delaware</option>
                                <option value="FL">Florida</option>
                                <option value="GA">Georgia</option>
                              </select>
                              </div>

                             
                            <div class="col-sm-3">
                              <span class="bigger-110">颜色</span>
                              <select multiple="" class="width-80 chosen-select" id="form-field-select-4" data-placeholder="选择颜色">
                                <option value="AL">黑色</option>
                                <option value="AK">黑白</option>
                                <option value="AZ">灰白</option>
                                <option value="AR">蓝色</option>
                                <option value="CA">red</option>
                                <option value="CO">green</option>
                              </select>
                              </div><!-- /span -->
                              
                               <!-- 选择结束 -->
                              
                              <div class="col-sm-3">
                              <br />
                                  <button type="reset" class="btn btn-success">提交</button>
                              </div>
           <% end %>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div>
  </div>

<!-- Matter ends -->
    
