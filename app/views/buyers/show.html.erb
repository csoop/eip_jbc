<% @nav = 'buyer_new' %>
<%= render 'shared/header' %>
<!-- Main bar -->
<div class="mainbar">

<%= render 'shared/content_header' %>


<!-- Matter -->

<div class="matter">
<div class="container">
  <div class="row">

        <div class="col-xs-12">
            <% flash.each do |name, msg| %>
              <div class="alert alert-block alert-success">
                <%= content_tag :div, msg, :id => "flash_#{name}" %>
              </div>
            <% end %> 
        </div>

        <div class="col-xs-12">
          <!-- PAGE CONTENT BEGINS -->

          <div class="alert alert-danger">
            <i class="icon-bullhorn"></i>:
            请上传图片，建议上传4-6张多角度照片!  <br />
            <i class="icon-info"></i>:
            图片宽与高的比例为8:5，例如："480*300" 和 "720*450" !
          </div>
        </div>
        <!--<div class="col-sm-9">
          <div id="dropzone">
            
            <div class="fallback">
            </div>
          </div><!- PAGE CONTENT ENDS 
        </div> -->
        <div class="widget-box">
                      <div class="widget-header widget-header-blue widget-header-flat">
                        <h4 class="lighter">添加新商品</h4>
                      </div>

                      <div class="widget-body">
                        <div class="widget-main">
                          <div id="fuelux-wizard" class="row-fluid" data-target="#step-container">
                            <ul class="wizard-steps">
                              <li data-target="#step1" class="complete">
                                <span class="step">1</span>
                                <span class="title">添加货品信息</span>
                              </li>

                              <li data-target="#step2" class="active">
                                <span class="step">2</span>
                                <span class="title">为此货品图片</span>
                              </li>
                            </ul>
                          </div>

                          <hr />
                          <div class="position-relative">
                            <div class="step-pane" id="step2">
                              <%= form_for [@buyer, Picture.new], :html => {id: 'picture-dropzone', class: :dropzone, multipart: true} do |f| %>
                              
                                <%= f.hidden_field :image %> 
                                <div class="dz-message">
                                <span class="bigger-150 bolder"><i class="icon-caret-right red"></i> 将图片拖动到此处或 '点击'</span>
                                <span class="smaller-80 grey">(上传)</span> <br />
                                <i class="upload-icon icon-cloud-upload blue icon-3x"></i>
                                </div>
                                </div>
                                <% end %>
                            </div>
                          <hr />
                          <div class="row-fluid wizard-actions">
                            <%= link_to '返回到新建', new_buyer_path, class: "btn btn-info"%>
                          </div>

                        </div><!-- /widget-main -->
                      </div><!-- /widget-body -->
                    </div>



    </div><!-- /.col -->
  </div><!-- /.row -->
</div>
</div>



    <div class="clearfix"></div>

</div>

